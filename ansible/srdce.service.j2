[Unit]
Description=srdce
After=network.target

[Service]
Type=simple
User=deploy
Group=www-data
WorkingDirectory=/var/www/srdce
ExecStart=/var/www/srdce/.venv/bin/gunicorn -b 127.0.0.1:5003 -w 4 --access-logfile - srdce.wsgi
ExecReload=/bin/kill -HUP $MAINPID
Environment="DEBUG={{ debug }}"
Environment="SECRET_KEY={{ secret_key }}"
TimeoutSec=15
Restart=always

[Install]
WantedBy=multi-user.target
